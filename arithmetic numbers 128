code
int inSequence(int a, int b, int c){
        // code here
        if(a==b)
            return 1;
        if(c==0)
            return 0;
        int res=(b-a)%c;
        if(res==0 and (((b-a)<0 and c<0) or ((b-a>0) and c>0)))
            return 1;
        return 0;
    }
